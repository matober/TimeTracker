    <div class="panel-group">
      <div class="panel text-center">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a data-toggle="collapse" href="#collapse1">
              <%= cat.c_name %>
            </a>
          </h4>
        </div>
        <div id="collapse1" class="panel-collapse collapse">
          <ul class="list-group">
            <li class="list-group-item">Reading</li>
            <li class="list-group-item">Capstone Project</li>
            <li class="list-group-item">Running</li>
          </ul>
        </div>
      </div>

    </div>
<% end %>


  <%= select_tag( :activity, options_for_select(Activity.all.collect {|a| [ a.a_name]})) %>
  <%= select_tag( :category, options_for_select(Category.all.collect {|c| [c.id]}), {include_blank: true})%>


